<% layout("layouts/boilerplate.ejs") %>
<body>
  
    <div class="row">
        <div class="col-8 offset-2">
        </br> </br>
            <h3>Create a New Listing</h3>
          
    <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data" >

        <div class="mb-3">
            <lable for="title" class="form-lable">Title</lable>
            <input name="listings[title]" id="title" placeholder="Enter your title" class="form-control" type="text" required>
            <div class="invalid-feedback">Title should be valid</div>
        </div>
       
        <div class="mb-3">
            <lable for="description" class="form-lable">Description</lable>
            <textarea name="listings[description]" id="description" class="form-control" placeholder="Enter your description"  type="text" required></textarea>
            <div class="invalid-feedback">Description should be valid</div>
        </div>

        <div class="mb-3">
            <lable for="image" class="form-lable">Upload listing Image</lable>
            <input name="listings[image]" class="form-control" id="image"  type="file">
        
        </div>
        
      <div class="row"> 
        <div class="mb-3 col-md-4" >
         <lable for="price" class="form-lable">Price</lable>
         <input name="listings[price]" class="form-control" id="price" placeholder="2000" type="number" required>
         <div class="invalid-feedback">Price should be valid</div>

        </div>

        <div class="mb-3 col-md-8">
         <lable for="country" class="form-lable">Country</lable>
         <input name="listings[country]" id="country" class="form-control" placeholder="India" type="text" required>
         <div class="invalid-feedback">Country name should be valid</div>

        </div>
      </div> 
        
       
        <div class="mb-3">
            <lable for="location" class="form-lable">Location</lable>
            <input name="listings[location]" class="form-control" id="location" placeholder="Khandwa, Madhya Pradesh" type="text" required>
            <div class="invalid-feedback">Location should be valid</div>

        </div>


        <button class="btn add-btn">Add</button>
        <br> <br>
    </form>
</div>
</div>

</body>
